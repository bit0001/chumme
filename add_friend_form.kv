<AddFriendFormInput@BoxLayout>
    height: '30dp'
    size_hint_y: None
    label_text: ''
    input_text: input_text
    Label:
        text: root.label_text
    TextInput:
        id: input_text


<AddFriendForm>:
    orientation: 'vertical'
    first_name: first_name.input_text
    middle_name: middle_name.input_text
    last_name: last_name.input_text
    birthdate: birthdate.input_text
    email: email.input_text
    cell_phone: cell_phone.input_text
    AddFriendFormInput:
        id: first_name
        label_text: 'First Name'
    AddFriendFormInput:
        id: middle_name
        label_text: 'Middle Name'
    AddFriendFormInput:
        id: last_name
        label_text: 'Last Name'
    AddFriendFormInput:
        id: birthdate
        label_text: 'Birthdate'
    AddFriendFormInput:
        id: email
        label_text: 'Email'
    AddFriendFormInput:
        id: cell_phone
        label_text: 'Cell Phone'
    BoxLayout:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_list()
        Button:
            text: 'Add friend'
            on_press: app.root.add_friend()

<AddFriendFormInput@BoxLayout>
    height: '30dp'
    size_hint_y: None
    label_text: ''
    Label:
        text: root.label_text


<AddFriendForm>:
    orientation: 'vertical'
    first_name: first_name
    middle_name: middle_name
    last_name: last_name
    birthdate: birthdate
    email: email
    cell_phone: cell_phone
    AddFriendFormInput:
        label_text: 'First Name'
        TextInput:
            id: first_name
    AddFriendFormInput:
        label_text: 'Middle Name'
        TextInput:
            id: middle_name
    AddFriendFormInput:
        label_text: 'Last Name'
        TextInput:
            id: last_name
    AddFriendFormInput:
        label_text: 'Birthdate'
        TextInput:
            id: birthdate
    AddFriendFormInput:
        label_text: 'Email'
        TextInput:
            id: email
    AddFriendFormInput:
        label_text: 'Cell Phone'
        TextInput:
            id: cell_phone
    BoxLayout:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_list()
        Button:
            text: 'Add friend'
            on_press: app.root.add_friend()

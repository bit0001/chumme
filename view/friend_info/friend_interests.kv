#: include view/friend_info/edit_friend_interests.kv
#: import FriendInterests controller.friend_info.friend_interests.FriendInterests
<FriendInterests>:
    no_interests_label: no_interests_label
    interest_scroll_view: interest_scroll_view
    orientation: 'vertical'
    Button:
        size_hint_y: None
        height: '40dp'
        text: 'Edit Interests'
        on_press: app.root.show_edit_interests_view(root.friend)
    GroupTitle:
        title: 'Interests:'
    Label:
        id: no_interests_label
        valign: 'middle'
    InterestScrollableContainer:
        id: interest_scroll_view

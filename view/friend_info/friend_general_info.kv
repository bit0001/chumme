#: import FriendGeneralInfo controller.friend_info.friend_general_info.FriendGeneralInfo
<FriendGeneralInfo>:
    orientation: 'vertical'
    social_network_info: social_network_info
    BoxLayout:
        size_hint_y: None
        height: '40dp'
        Button:
            text: 'Edit'
            on_press: app.root.show_update_friend_form(root.friend)
        Button:
            text: 'Delete'
            on_press: root.delete_friend()
    GroupTitle:
        title: 'General Information'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            InfoField:
                field_label: 'First Name'
                field_text: root.first_name
            InfoField:
                field_label: 'Middle Name'
                field_text: root.middle_name
            InfoField:
                field_label: 'Last Name'
                field_text: root.last_name
            InfoField:
                field_label: 'Birthdate'
                field_text: root.birthdate
            InfoField:
                field_label: 'Email'
                field_text: root.email
            InfoField:
                field_label: 'Cell Phone'
                field_text: root.cell_phone
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                Image:
                    size_hint: (0.95, 0.95)
                    source: 'resources/img/chumme_profile.png'
                    center: self.parent.center
            Label:
                height: '40dp'
                size_hint_y: None
                text: '{}   {}'.format(icon('fa-heart'), root.status)
                markup: True
            SocialNetworkInfo:
                id: social_network_info

<InfoField@BoxLayout>:
    field_label: ''
    field_text: ''
    Label:
        text: root.field_label
    Label:
        text: root.field_text

<SocialNetworkContainer@ScrollView>:
    container: container
    do_scroll_x: False
    StackLayout:
        size_hint_y: None
        height: self.minimum_height
        id: container
        padding:  ['20dp', 0, '20dp', 0]
        spacing: [20, 20]
        orientation: 'lr-tb'

<SocialNetworkInfo@BoxLayout>
    social_network_container: social_network_container
    orientation: 'vertical'
    spacing: 20
    Label:
        padding: [40, 0]
        size_hint_y: None
        height: '20dp'
        text_size: self.width, self.height
        text: 'Social Networks:'
    SocialNetworkContainer:
        id: social_network_container

<SocialNetworkButton>
    image: ''
    background_normal: 'resources/img/white_background.png'
    background_down: 'resources/img/gray_background.png'
    size_hint: None, None
    border: 0, 0, 0, 0
    size: '50dp', '50dp'
    on_press: self.open_url()
    Image:
        source: root.image
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        pos: self.pos

#: import FriendThoughts controller.friend_info.friend_thoughts.FriendThoughts
<ThoughtScrollableContainer@ScrollView>:
    thought_container: thought_container
    do_scroll_x: False
    GridLayout:
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        id: thought_container
        padding:  ['40dp', 0, '40dp', 0]
        spacing: [20, 20]

<FriendThoughts>:
    no_thoughts_label: no_thoughts_label
    thought_scroll_view: thought_scroll_view
    thought_input: thought_input
    orientation: 'vertical'
    GroupTitle:
        title: 'Thoughts about your friend:'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: no_thoughts_label
        ThoughtScrollableContainer:
            id: thought_scroll_view
    BoxLayout:
        size_hint_y: None
        height: '80dp'
        TextInput:
            id: thought_input
            size_hint_x: 5
            hint_text:
                'Once a thought has been added, you will not be able to ' +\
                'neither delete it nor modify it.'
        Button:
            size_hint_x: 2
            halign: 'center'
            valign: 'middle'
            text: 'Add\nThought'
            on_press: root.add_thought(thought_input.text)

<ThoughtLabel>:
    padding: [10, 10]
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'left'
    valign: 'middle'
    markup: True
    canvas.before:
        Color:
            rgba: 0.125, 0.91, 1.0, 0.4
        Rectangle:
            pos: self.pos
            size: self.size


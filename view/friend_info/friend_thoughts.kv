#: import FriendThoughts controller.friend_info.friend_thoughts.FriendThoughts
<ThoughtScrollableContainer@ScrollView>:
    thought_container: thought_container
    do_scroll_x: False
    StackLayout:
        size_hint_y: None
        height: self.minimum_height
        id: thought_container
        padding:  ['40dp', 0, '40dp', 0]
        spacing: [20, 20]
        orientation: 'lr-tb'

<FriendThoughts>:
    no_thoughts_label: no_thoughts_label
    thought_scroll_view: thought_scroll_view
    orientation: 'vertical'
    GroupTitle:
        title: 'Thoughts about your friend:'
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: no_thoughts_label
            text: 'There are no thoughts about your friend.'
        ThoughtScrollableContainer:
            id: thought_scroll_view
    BoxLayout:
        size_hint_y: None
        height: '80dp'
        TextInput:
            hint_text:
                'Once a thought has been added, you will not be able to ' +\
                'neither delete it nor modify it.'
            size_hint_x: 5
        Button:
            size_hint_x: 2
            halign: 'center'
            valign: 'middle'
            text: 'Add\nThought'

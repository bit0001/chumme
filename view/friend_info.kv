#: import icon iconfonts.icon
<InfoField@BoxLayout>:
    field_label: ''
    field_text: ''
    Label:
        text: root.field_label
    Label:
        text: root.field_text

<FriendInfoCarousel>:
    orientation: 'vertical'
    general_info: general_info
    interests: interests
    Label:
        text: root.friend.full_name
        size_hint_y: None
        height: '40dp'
    Carousel:
        FriendGeneralInfo:
            id: general_info
        FriendInterests:
            id: interests
    Button:
        text: 'Show friends'
        size_hint_y: None
        height: '40dp'
        on_press: app.root.show_friend_list()

<GroupTitle@BoxLayout>:
    title: ''
    size_hint_y: None
    height: '40dp'
    BoxLayout:
        size_hint_x: None
        width: '40dp'
    Label:
        text_size: self.size
        halign: 'left'
        valign: 'middle'
        text: root.title

<FriendGeneralInfo>:
    orientation: 'vertical'
    BoxLayout:
        size_hint_y: None
        height: '40dp'
        Button:
            text: 'Edit'
            on_press: app.root.show_update_friend_form(root.friend)
        Button:
            text: 'Delete'
            on_press: root.delete_friend()
    GroupTitle:
        title: 'General Information'
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            InfoField:
                field_label: 'First Name'
                field_text: root.first_name
            InfoField:
                field_label: 'Middle Name'
                field_text: root.middle_name
            InfoField:
                field_label: 'Last Name'
                field_text: root.last_name
            InfoField:
                field_label: 'Birthdate'
                field_text: root.birthdate
            InfoField:
                field_label: 'Email'
                field_text: root.email
            InfoField:
                field_label: 'Cell Phone'
                field_text: root.cell_phone
        BoxLayout:
            orientation: 'vertical'
            padding: '10dp'
            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'center'
                Image:
                    size_hint: (0.95, 0.95)
                    source: 'resources/chumme_profile.png'
                    center: self.parent.center
            Label:
                height: '40dp'
                size_hint_y: None
                text: '{}   {}'.format(icon('fa-heart'), root.status)
                markup: True
            Label:
                text: 'Social Networks'

<FriendInterests>:
    interests_container: interests_container
    orientation: 'vertical'
    Button:
        size_hint_y: None
        height: '40dp'
        text: 'Edit Interests'
        on_press: app.root.show_edit_interests_view(root.friend)
    GroupTitle:
        title: 'Interests'
    BoxLayout:
        BoxLayout:
            size_hint_x: None
            width: '40dp'
        BoxLayout
            id: interests_container
        BoxLayout:
            size_hint_x: None
            width: '40dp'

<EditFriendInterests>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            size_hint_y: None
            height: '40dp'
            text: root.friend.full_name
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            TextInput:
                size_hint_x: 2
            Button:
                size_hint_x: 1
                text: 'Add Interest'
        BoxLayout:
        BoxLayout:
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Cancel'
                on_press: root.cancel_edition()
            Button:
                text: 'Update'

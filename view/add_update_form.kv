#: import Friend model.friend.Friend
<FormInput@BoxLayout>
    height: '30dp'
    size_hint_y: None
    label_text: ''
    input_text: ''
    input_text_id: input_text_id
    Label:
        text: root.label_text
    TextInput:
        id: input_text_id
        write_tab: False
        multiline: False
        text: root.input_text

<SocialNetworkForm@ScrollView>
    container: container
    do_scroll_x: False
    GridLayout:
        cols: 1
        size_hint_y: None
        height: self.minimum_height
        id: container
        padding: ['40dp', 0, '40dp', 0]
        spacing: [20, 20]

<FriendForm>:
    orientation: 'vertical'
    first_name: first_name.input_text_id
    middle_name: middle_name.input_text_id
    last_name: last_name.input_text_id
    birthdate: birthdate.input_text_id
    email: email.input_text_id
    cell_phone: cell_phone.input_text_id
    status: status
    social_network_form: social_network_form
    FormInput:
        id: first_name
        label_text: 'First Name'
        input_text: root.friend.first_name
    FormInput:
        id: middle_name
        label_text: 'Middle Name'
        input_text: root.friend.middle_name
    FormInput:
        id: last_name
        label_text: 'Last Name'
        input_text: root.friend.last_name
    FormInput:
        id: birthdate
        label_text: 'Birthdate'
        input_text: root.friend.birthdate
    FormInput:
        id: email
        label_text: 'Email'
        input_text: root.friend.email
    FormInput:
        id: cell_phone
        label_text: 'Cell Phone'
        input_text: root.friend.cell_phone
    BoxLayout:
        height: '30dp'
        size_hint_y: None
        Label:
            text: 'Status'
        Spinner:
            id: status
            text: root.friend.status
            values: Friend.STATUSES
    Label:
        size_hint_y: None
        height: '30dp'
        halign: 'left'
        valign: 'middle'
        padding: ['20dp', 0]
        text_size: self.width, None
        text: 'Social Networks:'
    SocialNetworkForm:
        id: social_network_form

<SocialNetworkField>
    padding: [10, 10]
    size_hint_y: None
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'left'
    valign: 'middle'
    markup: True

<AddFriendForm>:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_list()
        Button:
            text: 'Add friend'
            on_press: root.add_friend()

<UpdateFriendForm>:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_details(root.friend)
        Button:
            text: 'Update friend'
            on_press: root.update_friend()

#: include view/add_update_form/image_chooser.kv
#: include view/add_update_form/social_network.kv
#: include view/add_update_form/friend_form.kv
#: import Friend model.friend.Friend

<AddFriendForm>:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_list()
        Button:
            text: 'Add friend'
            on_press: root.add_friend()

<UpdateFriendForm>:
    BoxLayout:
        height: '40dp'
        size_hint_y: None
        Button:
            text: 'Cancel'
            on_press: app.root.show_friend_details(root.friend)
        Button:
            text: 'Update friend'
            on_press: root.update_friend()

<FormInput@BoxLayout>
    height: '30dp'
    size_hint_y: None
    label_text: ''
    input_text: ''
    hint: ''
    input_text_id: input_text_id
    Label:
        text: root.label_text
        markup: True
    TextInput:
        id: input_text_id
        write_tab: False
        multiline: False
        text: root.input_text
        hint_text: root.hint

<FriendForm>:
    orientation: 'vertical'
    first_name: first_name.input_text_id
    middle_name: middle_name.input_text_id
    last_name: last_name.input_text_id
    birthdate: birthdate.input_text_id
    email: email.input_text_id
    cell_phone: cell_phone.input_text_id
    status: status
    social_network_form: social_network_form
    image: image
    FormInput:
        id: first_name
        label_text: 'First Name [b]*[/b]'
        input_text: root.friend.first_name
    FormInput:
        id: middle_name
        label_text: 'Middle Name'
        input_text: root.friend.middle_name
    FormInput:
        id: last_name
        label_text: 'Last Name [b]*[/b]'
        input_text: root.friend.last_name
    FormInput:
        id: birthdate
        label_text: 'Birthdate'
        input_text: root.friend.birthdate
        hint: 'YYYY/MM/DD'
    FormInput:
        id: email
        label_text: 'Email'
        input_text: root.friend.email
    FormInput:
        id: cell_phone
        label_text: 'Cell Phone'
        input_text: root.friend.cell_phone
    BoxLayout:
        height: '30dp'
        size_hint_y: None
        Label:
            text: 'Status'
        Spinner:
            id: status
            text: root.friend.status
            values: Friend.STATUSES
    Label:
        size_hint_y: None
        height: '30dp'
        halign: 'left'
        valign: 'middle'
        padding: ['20dp', 0]
        text_size: self.width, None
        text: 'Social Networks:'
    BoxLayout:
        SocialNetworkForm:
            id: social_network_form
        BoxLayout:
            spacing: 30
            padding: [0, 20, 0, 30]
            orientation: 'vertical'
            Image:
                id: image
                source: 'resources/img/chumme_profile.png'
            Button:
                padding: [20, 20]
                size_hint: None, None
                text_size: None, None
                size: self.texture_size
                pos_hint: {'center_x': 0.5}
                text: 'Choose photo'
                on_press: app.root.show_image_chooser()

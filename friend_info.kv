<InfoField@BoxLayout>:
    field_label: ''
    field_text: ''
    Label:
        text: root.field_label
    Label:
        text: root.field_text


<FriendInfoView>:
    orientation: 'vertical'
    Label:
        text: root.full_name
        size_hint_y: None
        height: '40dp'
    BoxLayout:
        size_hint_y: None
        height: '40dp'
        Button:
            text: 'Update'
            on_press:
                app.root.show_add_update_friend_form('update', root.friend)
        Button:
            text: 'Delete'
            on_press: root.delete_friend()
    BoxLayout:
        BoxLayout:
            orientation: 'vertical'
            InfoField:
                field_label: 'First Name'
                field_text: root.first_name
            InfoField:
                field_label: 'Middle Name'
                field_text: root.middle_name
            InfoField:
                field_label: 'Last Name'
                field_text: root.last_name
            InfoField:
                field_label: 'Birthdate'
                field_text: root.birthdate
            InfoField:
                field_label: 'Email'
                field_text: root.email
            InfoField:
                field_label: 'Cell Phone'
                field_text: root.cell_phone
        BoxLayout:
            orientation: 'vertical'
            AnchorLayout:
                Image:
                    anchor_x: 'center'
                    anchor_y: 'center'
                    size_hint: (0.75, 0.75)
                    source: 'chumme_profile.png'
            Label:
                text: 'Social Networks'
    Button:
        text: 'Show friends'
        size_hint_y: None
        height: '40dp'
        on_press: app.root.show_friend_list()
